/* pages/list/list.wxss */
.nav{
  position: fixed;
  left:0;
  top:0;
  overflow:hidden;
  overflow-y: scroll;
  width:120rpx;
  height:1100rpx;
  background-color: #f5f5f5;
}
.navshow{
  color:#666;
  padding:20rpx;
  width:80rpx;
  height:99rpx;
  line-height: 50rpx;
  text-align: center;
  border-bottom:1rpx solid #eee;
}
.navactive{
  color:#ff850c;
}

.content{
  position: fixed;
  left:120rpx;
  top:0;
  width:630rpx;
  height:1100rpx;
  background-color: #fff;
  overflow:hidden;
  overflow-y: scroll;
}
.scroll-view{
  width:630rpx;
}
.scroll-one{
  width:630rpx;
  height:200rpx;
  background-color: #eee;
  margin-bottom: 10rpx;
  position: relative;
}
.scroll-view image{
  width:200rpx;
  height:200rpx;
  float:left;
}
.name{
  display:block;
  height:100rpx;
  line-height: 100rpx;
  padding-left: 220rpx;
}
.price{
  display:block;
  height:100rpx;
  line-height: 100rpx;
  padding-left: 220rpx;
  color: #ff850c;
}
.add{
  position:absolute;
  bottom: 20rpx;
  right:20rpx;
  width:60rpx;
  height:60rpx;
  background-color: #ff850c;
  text-align: center;
  line-height:60rpx;
  color: #fff;
  font-size: 44rpx;
  border-radius: 50%;
}

.imgshadowbox{
  background-color: rgba(0,0,0,.4);
  position:fixed;
  left: 0;
  right:0;
  top:0;
  bottom:0;
}
.imgshadow{
  width:600rpx;
  height:800rpx;
  background-color: #fff;
  position:fixed;
  left:50%;
  top:50%;
  margin-left:-300rpx;
  margin-top:-400rpx;
}
.imgshadow image{
  width:600rpx;
  height:600rpx;
}
.imgshadow .bigname{
  display:block;
  line-height: 80rpx;
  font-size: 32rpx;
  color:#333;
  padding-left:20rpx;
  font-weight: bold;
}
.imgshadow .bigprice{
  display:block;
  line-height: 40rpx;
  font-size: 32rpx;
  color:#ff850c;
  padding-left:20rpx;
  float:left;
}
.imgshadow .goshopcar{
  margin-right:20rpx;
  text-align:center;
  display:block;
  float:right;
  line-height: 50rpx;
  width:180rpx;
  height:50rpx;
  font-size: 28rpx;
  background-color:#ff850c;
  color: #fff;
  padding-left:20rpx;
}

.title{
  display:block;
  padding:40rpx;
  text-align: center;
}
.wendu,.jialiao,.tangdu{
  display:block;
  padding:20rpx;
}

.shopcar{
  margin-top: 100rpx;
  width:400rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #ff850c;
  border-radius: 10rpx;
  margin-left:100rpx;
  color:#fff;
}

.gocar{
  display:block;
  width:100%;
  height:100rpx;
  background-color: #fff;
  position:fixed;
  left: 0;
  bottom:0;
  border-top:1rpx solid #eee;
}
.gocar .gocarleft{
  width:500rpx;
  height:100rpx;
  line-height:100rpx;
  padding-left:50px;
}
.gocar .gocarright{
  width:200rpx;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  background-color: #ff850c;

}
